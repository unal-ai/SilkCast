[Unit]
Description=SilkCast streaming kernel
After=network.target

[Service]
ExecStart=/usr/local/bin/silkcast
Restart=on-failure
User=silkcast
Group=silkcast
AmbientCapabilities=CAP_NET_BIND_SERVICE
NoNewPrivileges=true
RestartSec=2s
WorkingDirectory=/var/lib/silkcast

[Install]
WantedBy=multi-user.target
